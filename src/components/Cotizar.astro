---
import { carCategories } from "../data/carCategories";
const cars = carCategories.flatMap(cat => cat.cars);
---

<html lang="en">
  <head>
    <title>Nissan Quote</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <main class="max-w-6xl mx-auto p-6">
      <h1 class="text-4xl font-bold mb-8">Choose Your Nissan</h1>
      <div class="grid md:grid-cols-3 gap-6">
        {cars.map(car => (
          <a href={`/cotizar/${car.slug}`} class="bg-white shadow rounded-xl p-4 hover:scale-105 transition">
            <img src={car.img} alt={car.name} class="rounded-lg mb-3 w-full h-48 object-cover" />
            <h2 class="text-2xl font-semibold">{car.name}</h2>
            <p class="text-sm text-gray-600">Starting at ${car.price.toLocaleString()}</p>
          </a>
        ))}
      </div>
    </main>
  </body>
</html>
